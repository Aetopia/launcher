<UserControl x:Class="Flarial.Launcher.UI.Controls.LuBackupCardElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             xmlns:ui1="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:ui11="clr-namespace:WPFUI.Controls;assembly=WPFUI"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="MainGrid">
        <ui11:CardExpander Icon="Save24" Name="BackupCard"
                            Margin="0 0 0 8" >
        

         
            <StackPanel Name="BackupButtonsStackPanel" Orientation="Horizontal">
                <ui11:Button x:Name="LoadButton"
                              Content="Load"
                              Icon="ArrowDownload20"
                              Foreground="Black"
                              Click="LoadButton_OnClick" />
                <Grid Width="4" />
                <ui11:Button x:Name="DeleteButton"
                              Content="Delete"
                              Icon="Delete20"
                              Foreground="Black"
                              Click="DeleteButton_OnClick"/>

            </StackPanel>
        </ui11:CardExpander>
    </Grid>
</UserControl>